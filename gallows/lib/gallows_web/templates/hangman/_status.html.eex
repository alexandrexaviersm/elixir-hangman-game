<p>
    Turns left: <%= @tally.turns_left %>
</p>

<p>
    Word so far: <%= word_so_far(@tally) %>
</p>

<%= if game_over?(@tally) do %>
<%= new_game_button(@conn) %>
<% else %>
<p>
    Letters Used: <%= Enum.join(MapSet.to_list(@tally.used_letters), ", ") %>
</p>
<%= form_for(@conn, GallowsWeb.Router.Helpers.hangman_path(@conn, :make_move), [as: :make_move, method: :put], fn f->  %>
<%= text_input(f, :guess) %>
<%= submit("Make next move") %>
<% end) %>
<% end %>